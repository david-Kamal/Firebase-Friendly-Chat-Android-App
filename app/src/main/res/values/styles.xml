<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <item name="colorAccent">#ffffff</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="EditText.White" parent="@style/AppTheme">
        <item name="colorControlActivated">#3F51B5</item>
        <item name="colorControlHighlight">#5C6BC0</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>
    <style name="EditText.White.Hint" parent="@style/EditText.White">
        <item name="colorAccent">#5C6BC0</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="Custom.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorText</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog"></style>

</resources>
